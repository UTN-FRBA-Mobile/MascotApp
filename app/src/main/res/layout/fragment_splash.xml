<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    app:layoutDescription="@xml/fragment_splash_scene"
    android:id="@+id/motionLayout"
    tools:context=".fragments.SplashFragment">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="288dp"
        android:src="@drawable/logo_mascotapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/su_publicacion_se_genero_con_exito"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titleTextView"
        android:layout_width="242dp"
        android:layout_height="95dp"
        android:layout_marginTop="388dp"
        android:alpha="0.0"
        android:gravity="center"
        android:text="@string/su_publicacion_se_genero_con_exito"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoImageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0.0"
        android:src="@drawable/mascotapp_text_w_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/su_publicacion_se_genero_con_exito"/>


</androidx.constraintlayout.motion.widget.MotionLayout>
